{
  "version": 2,
  "builds": [
    {
      "src": "packages/saas/*/package.json",
      "use": "@vercel/node"
    },
    {
      "src": "packages/saas/*/next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/saas/(.*)",
      "dest": "/packages/saas/luxoranova-saas/api/$1"
    },
    {
      "src": "/app/(.*)",
      "dest": "/packages/saas/nextjs-boilerplate/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/packages/saas/luxoranova-saas/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "DATABASE_URL": "@database-url",
    "NEXTAUTH_SECRET": "@nextauth-secret",
    "OPENAI_API_KEY": "@openai-api-key"
  },
  "regions": ["iad1", "sfo1"],
  "functions": {
    "packages/saas/*/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/docs/:path*",
      "destination": "https://luxoranova9-docs.vercel.app/:path*"
    }
  ]
}