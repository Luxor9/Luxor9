{
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish packages",
      "registry": "https://registry.npmjs.org"
    },
    "version": {
      "allowBranch": ["main", "develop"],
      "conventionalCommits": true
    }
  },
  "packages": [
    "packages/*/*"
  ],
  "ignoreChanges": [
    "**/*.md",
    "**/test/**",
    "**/tests/**"
  ]
}