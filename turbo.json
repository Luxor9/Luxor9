{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "out/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "lint": {
      "dependsOn": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "**/*.js", "**/*.ts", "**/*.tsx"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"],
      "cache": false
    },
    "deploy:staging": {
      "dependsOn": ["build", "test", "lint"],
      "cache": false
    },
    "deploy:production": {
      "dependsOn": ["build", "test", "lint"],
      "cache": false
    },
    "docker:build": {
      "dependsOn": ["build"],
      "cache": false
    },
    "health-check": {
      "cache": false
    }
  }
}